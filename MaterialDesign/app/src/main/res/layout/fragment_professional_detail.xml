 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_bg"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1">


     <ImageView
            android:layout_width="54dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/tvProfessionalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="56dp"
            android:padding="5dp"
            android:text="Professional"/>

        <TextView
            android:id="@+id/tvProfessionalDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvProfessionalTitle"
            android:layout_marginLeft="56dp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="Professional Description"/>


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvProfessionalDescription"
            android:isIndicator="true"
            android:layout_marginRight="5dp"
            android:max="5"
            android:numStars="0"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="@android:color/darker_gray"/>



    </RelativeLayout>

